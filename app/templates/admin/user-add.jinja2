{% extends "layout.jinja2" %}
{% block content %}
<div class="container-fluid px-4 mb-5">
    <h1 class="mt-4">계정 등록</h1>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">계정 등록</li>
            <li class="breadcrumb-item active">이메일 입력</li>
        </ol>
    </nav>

    {% include "lib/flash.jinja2" %}

    <form method="post">
        <div class="mb-3">
            <label for="email" class="form-label"><i class="fas fa-envelope me-1"></i> 이메일</label>
            <input id="email" class="form-control" type="email" placeholder="이메일" name="email" required>
        </div>

        <button class="btn btn-primary" type="submit">계정 등록</button>
    </form>
</div>
{% endblock %}