{% extends "layout.jinja2" %}
{% block content %}
<div class="section">
    <div class="container">
        <h1 class="title is-1 has-text-centered">계정 등록</h1>

        <div class="columns is-centered">
            <div class="column is-one-third">
                {% for message in get_flashed_messages(category_filter=["user-add"]) %}
                    <div class="message is-danger">
                        <div class="message-header">
                            <p>계정 등록 실패</p>
                        </div>
                        <div class="message-body">
                            {{ message }}
                        </div>
                    </div>
                {% endfor %}

                <form class="box" method="post">
                    <div class="field">
                        <label class="label">이메일</label>
                        <div class="control has-icons-left">
                            <input class="input" type="email" placeholder="이메일" name="email" required>
                            <span class="icon is-small is-left">
                                <i class="fas fa-envelope"></i>
                            </span>
                        </div>
                    </div>

                    <br>

                    <div class="field has-text-right">
                        <div class="control">
                            <button class="button is-link is-medium" type="submit">계정 등록</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}