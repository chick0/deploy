{% extends "layout.jinja2" %}
{% block content %}
<div class="section">
    <div class="container">
        <h1 class="title is-1 has-text-centered">비밀번호 변경</h1>
        <div class="columns is-centered">
            <div class="column is-one-third">
                {% for message in get_flashed_messages(category_filter=["user-password-update"]) %}
                    <div class="message is-danger">
                        <div class="message-header">
                            <p>비밀번호 변경 실패</p>
                        </div>
                        <div class="message-body">
                            {{ message }}
                        </div>
                    </div>
                {% endfor %}

                <form class="box" method="post">
                    <div class="field">
                        <label class="label">기존 비밀번호</label>
                        <div class="control has-icons-left">
                            <input class="input" type="password" placeholder="기존 비밀번호" name="old-password" minlength="12" required>
                            <span class="icon is-small is-left">
                                <i class="fas fa-lock"></i>
                            </span>
                        </div>
                    </div>

                    <div class="field">
                        <label class="label">비밀번호</label>
                        <div class="control has-icons-left">
                            <input class="input" type="password" placeholder="비밀번호" name="password" minlength="12" required>
                            <span class="icon is-small is-left">
                                <i class="fas fa-lock"></i>
                            </span>
                        </div>
                    </div>

                    <div class="field">
                        <label class="label">비밀번호 확인</label>
                        <div class="control has-icons-left">
                            <input class="input" type="password" placeholder="비밀번호 확인" name="password-check" minlength="12" required>
                            <span class="icon is-small is-left">
                                <i class="fas fa-lock"></i>
                            </span>
                        </div>
                    </div>

                    <br>

                    <div class="field has-text-right">
                        <div class="control">
                            <button class="button is-link is-medium" type="submit">비밀번호 변경</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}